<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>News</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/css/bootstrap.min.css" integrity="sha384-PsH8R72JQ3SOdhVi3uxftmaW6Vc51MKb0q5P2rRUpPvrszuE4W1povHYgTpBfshb" crossorigin="anonymous">

  </head>
  <body>
    <nav class="navbar navbar-dark bg-dark">
      <a href="" class="navbar-brand mx-auto">News</a>
    </nav>

    <div class="row">
      <div class="col-md-5 mt-4 text-center">
        <table class="table table-striped table-bordered">
          <tr>
            <th>ID</th>
            <th>Title</th>
            <th>News</th>
          </tr>
          <% for(let i = 0; i< news.length;i++){ %>
            <tr>
                <td><%= news[i].id_news %></td>
                <td><%= news[i].title %></td>
                <td><%= news[i].news %></td>
            </tr>
          <% } %>
        </table>
      </div>
      <div class="col-md-3 mt-4 card-body">
        <form class="card-body" action="/add" method="post">
          <h3 class="card-title">Add News</h3>
          <div class="form-group">
            <input name="title" type="text" class="form-control" placeholder="News Titlte">
          </div>
          <div class="form-group">
            <input name="news" type="text" class="form-control" placeholder="News Content">
          </div>
          <input type="submit" class="btn btn-primary">
        </form>
      </div>
      <div class="col-md-3 mt-4 card-body">
        <form class="card-body" action="/del" method="post">
          <h3 class="card-title">Delete News</h3>
          <div class="form-group">
            <input name="id" type="text" class="form-control" placeholder="ID">
          </div>
          <div class="form-group">
            <input name="title" type="text" class="form-control" placeholder="Titlte">
          </div>
          <div class="form-group">
            <input name="news" type="text" class="form-control" placeholder="Content">
          </div>
          <input type="submit" class="btn btn-danger" value="Delete">
        </form>
      </div>
    </div>
  </body>
</html>
